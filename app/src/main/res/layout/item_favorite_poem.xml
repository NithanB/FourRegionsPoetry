<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_background_border"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvFavoritePoemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="normal" /> <!-- Removed maxLines and ellipsize, changed textStyle -->

    <TextView
        android:id="@+id/tvFavoritePoemRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="8dp"/> <!-- Increased marginTop -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"> <!-- Increased marginTop -->

        <ImageButton
            android:id="@+id/btnDeleteFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_custom" 
            app:tint="?android:attr/textColorSecondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Poem"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btnCopyFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_custom"
            app:tint="?android:attr/textColorSecondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy Poem"
            android:padding="8dp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</LinearLayout>